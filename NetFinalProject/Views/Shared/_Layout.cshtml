<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - NetFinalProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">
            <img src="~/images/performance.png" alt="Logo" width="30" height="30" class="d-inline-block align-text-top">
            University System
        </a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Student")">Students</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Course")">Courses</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Department")">Departments</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Instructor")">Instructors</a></li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Account")">Login</a></li>
            </ul>
        </div>
    </nav>


    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-light text-center py-3 mt-4">
        &copy; @DateTime.Now.Year University System
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderBody()
    @RenderSection("Scripts", required: false)
</body>
</html>
