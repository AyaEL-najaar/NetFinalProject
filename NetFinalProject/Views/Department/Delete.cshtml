@model dynamic
@{
    ViewData["Title"] = "Delete Confirmation";
}

@if (ViewBag.Deleted == true)
{
    <div class="alert alert-success text-center mt-4">
        <h3>@ViewBag.Message</h3>
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    </div>
}
else
{
    <h3 class="text-danger mt-4">⚠️ Are you sure you want to delete this record?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>
        <dt class="col-sm-3">Manager Name</dt>
        <dd class="col-sm-9">@Model.ManagerName</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
}
