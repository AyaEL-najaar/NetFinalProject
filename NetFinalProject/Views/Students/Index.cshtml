@model IEnumerable<NetFinalProject.Models.Student>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Students";
}

<h2>Students</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="Search by name or address..." />
    </div>
    <div class="col-md-4">
        <select name="deptId" class="form-select" asp-items="ViewBag.Departments">
            <option value="">-- All Departments --</option>
        </select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
    <div class="col-md-2 text-end">
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Department</th>
            <th>Grade</th>
            <th>Address</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StudentId</td>
                <td>@item.Name</td>
                <td>@item.Department?.Name</td>
                <td>@item.Grade</td>
                <td>@item.Address</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.StudentId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
